    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.5",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.17.0",
    "eslint-config-next": "^15.1.3",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "pino-pretty": "^13.1.1",
    "playwright": "^1.55.0",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "tailwindcss": "^3.4.17",
