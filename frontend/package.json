{
  "name": "solfolio-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "test": "jest --watchAll=false --forceExit --detectOpenHandles --maxWorkers=50%",
    "test:watch": "jest --watch --maxWorkers=50%",
