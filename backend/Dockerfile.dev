FROM node:22-alpine
RUN apk add --no-cache libc6-compat
WORKDIR /app

# Enable pnpm
RUN corepack enable pnpm

# Copy package files
COPY package*.json pnpm-lock.yaml* ./

# Install dependencies
RUN pnpm install

# Copy source code
COPY . .

EXPOSE 3001

# Use nodemon for hot-reloading in development
CMD ["pnpm", "run", "start:dev"]