# Database Configuration
POSTGRES_USER=solfolio
POSTGRES_PASSWORD=devpassword
POSTGRES_DB=solfolio_dev
DATABASE_URL=postgresql://solfolio:devpassword@localhost:5432/solfolio_dev

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Application Ports
GRPC_PORT=50051
WEBSOCKET_PORT=8081
FRONTEND_PORT=3000

# Blockchain RPC Configuration
# Get your API key from https://www.helius.dev/
HELIUS_API_KEY=your_helius_api_key_here
HELIUS_RPC_URL=https://mainnet.helius-rpc.com/?api-key=your_helius_api_key_here

# Frontend-specific RPC Configuration (REQUIRED for wallet connection)
# For devnet testing: https://rpc-devnet.helius.xyz/?api-key=your_helius_api_key_here
# For mainnet: https://mainnet.helius-rpc.com/?api-key=your_helius_api_key_here
NEXT_PUBLIC_HELIUS_RPC_URL=https://rpc-devnet.helius.xyz/?api-key=your_helius_api_key_here

# Solana Network
SOLANA_NETWORK=devnet  # Use devnet for testing
NEXT_PUBLIC_SOLANA_NETWORK=devnet  # Must match SOLANA_NETWORK
# Alternative: mainnet-beta, testnet

# Jupiter Price API
JUPITER_API_URL=https://price.jup.ag/v4

# Frontend Configuration
NEXT_PUBLIC_GRPC_WEB_URL=http://localhost:8080
NEXT_PUBLIC_WEBSOCKET_URL=ws://localhost:8081

# Optional: CloudFlare Configuration (for production)
# CLOUDFLARE_ZONE_ID=your_zone_id
# CLOUDFLARE_API_TOKEN=your_api_token

# Optional: AWS Configuration (for production)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key

# Application Settings
NODE_ENV=development
LOG_LEVEL=debug

# Cache TTL Settings (in seconds)
CACHE_TTL_PRICES=300      # 5 minutes for price data
CACHE_TTL_POSITIONS=60    # 1 minute for position data
CACHE_TTL_METADATA=3600   # 1 hour for token metadata

# Rate Limiting
RATE_LIMIT_RPC_PER_SECOND=100
RATE_LIMIT_API_PER_MINUTE=60

# WebSocket Settings
MAX_WEBSOCKET_CONNECTIONS=100
WEBSOCKET_HEARTBEAT_INTERVAL=30000  # 30 seconds

# Protocol Adapter Settings
MARINADE_PROGRAM_ID=MarBmsSgKXdrN1egZf5sqe1TMai9K1rChYNDJgjq7aD
KAMINO_PROGRAM_ID=KAMINOxxxxx  # Replace with actual Kamino program ID

# Monitoring (optional)
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# Security
JWT_SECRET=your_jwt_secret_for_development_only
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Feature Flags
ENABLE_REAL_TIME_UPDATES=true
ENABLE_CACHE=true
ENABLE_METRICS=false
ENABLE_PRICE_ALERTS=false